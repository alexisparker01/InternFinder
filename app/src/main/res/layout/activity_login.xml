<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.InternFinder.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:background="#FCFFE1"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/tvLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:fontFamily="sans-serif-light"
        android:text="InternFinder"
        android:textColor="#000000"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLogo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_border"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="username"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#000000" />

    <EditText
        android:id="@+id/etPassword"
        android:background="@drawable/white_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUsername"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#000000" />


    <Button
        android:id="@+id/btnLoginChoice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFD1D1"
        android:fontFamily="sans-serif-light"
        android:text="Login"
        android:textColor="#000000" />


    <Button
        android:id="@+id/btnSignupChoice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLoginChoice"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFD1D1"
        android:fontFamily="sans-serif-light"
        android:text="Signup"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFD1D1"
        android:fontFamily="sans-serif-light"
        android:text="Login"
        android:textColor="#000000" />


    <Button
        android:id="@+id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLoginChoice"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFD1D1"
        android:fontFamily="sans-serif-light"
        android:text="Signup"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSignupChoice"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:backgroundTint="#FFD1D1"
        android:fontFamily="sans-serif-light"
        android:text="Go Back"
        android:textColor="#000000" />

</RelativeLayout>